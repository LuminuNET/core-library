/* eslint quotes: ["error", "double"] */
{
	"module": "commonjs",
	"target": "es5",
	"lib": ["es2015", "dom"],
	"outDir": "dist",
	"sourceMap": true,
	"strict": true,
	"declaration": true,
	"compilerOptions": {
		"outDir": "build",
		"baseUrl": "./",
		"strict": true,
		"target": "ES5",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve"
	},
	"exclude": ["node_modules", "build", "tests", "types"]
}
